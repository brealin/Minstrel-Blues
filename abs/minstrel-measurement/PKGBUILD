# Maintainer: Your Name <denis.roeper@posteo.de>
pkgname=minstrel-measurement-git
pkgver=r460.dfcdadd
pkgrel=1
epoch=
pkgdesc="Minstrel measurement for Lua 5.1"
arch=("x86_64")
url="https://github.com/thuehn/Minstrel-Blues"
license=('GPL')
groups=()
depends=(lua51 lua-system-git lua-cjson-git lua-filesystem lua-posix lua-argparse-git lua-lpc-git lua-pprint-git lua-rpc-git lua51-bitop procps-ng coreutils net-tools bind-tools iw tcpdump iperf openssh )
makedepends=(lua51)
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+https://github.com/thuehn/Minstrel-Blues.git")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd Minstrel-Blues/measurement/minstrel-measurement
  	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}


build() {
	cd Minstrel-Blues/measurement/minstrel-measurement
	make
}

package() {
	depends=('lua51')
	cd Minstrel-Blues/measurement/minstrel-measurement
	msg2 "Building $pkgdir with Lua 5.1"
	make ROOT="$pkgdir" LUAC="luac5.1" install
}
